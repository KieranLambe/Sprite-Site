<h1 class="content-padding">Shopping Basket</h1>
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-8">
      <% @basket.basket_items.each do |basket_item| %>
        <div class="card basket-item mb-3">
          <div class="row g-0">
            <div class="col-md-4">
              <% if basket_item.item.image.attached? %>
                <%= image_tag basket_item.item.image, class: 'img-fluid rounded-start' %>
              <% else %>
                <%= image_tag 'default_image.png', class: 'img-fluid rounded-start' %> <!-- Default image if none attached -->
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= basket_item.item.name %></h5>
                <p class="card-text"><%= basket_item.item.description %></p>
                <p class="card-text"><small class="text-muted">$<%= basket_item.item.price %></small></p>
                <div class="quantity-adjustment">
                  <%= form_with url: basket_update_item_quantity_path(@basket.token, basket_item), method: :patch, local: true do %>
                    <button type="submit" name="quantity_change" value="-1" class="btn btn-secondary">-</button>
                    <span class="quantity-display"><%= basket_item.quantity %></span>
                    <button type="submit" name="quantity_change" value="1" class="btn btn-secondary">+</button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Total Price and Checkout Button -->
  <div class="row justify-content-center">
    <div class="col-8 text-right total-price">
      <h4>Total: $<%= @basket.basket_items.sum { |basket_item| basket_item.item.price * basket_item.quantity } %></h4>
      <%= button_to 'Checkout', class: 'btn btn-primary' %>
    </div>
  </div>
</div>
