<header class="site-header">
  <div class="container">
    <div class="header-left">
      <h4 class="company-name">The Kieran Company</h4>
      <nav>
        <ul class="header-links">
          <li><h5><%= link_to "Home", root_path %></h5></li>
          <li><h5><%= link_to "About", about_path %></h5></li>
          <li><h5><%= link_to "Contact", contact_path %></h5></li>
        </ul>
      </nav>
    </div>
    <div class="header-right">
      <nav>
        <ul class="basket-link">
          <li><%= link_to basket_path(@basket.token) do %>
            <i class="fas fa-shopping-basket"></i>
          <% end %></li>
        </ul>
      </nav>
    </div>
  </div>
</header>
